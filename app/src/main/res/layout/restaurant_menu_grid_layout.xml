<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imv_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txv_dish_price"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rounded_conner"
                android:textSize="20dp"
                android:gravity="center"
                android:text="$100" />

            <TextView
                android:id="@+id/txv_dish_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txv_dish_name"
                android:layout_toRightOf="@+id/imv_star"
                android:background="@drawable/rounded_conner"
                android:ellipsize="end"
                android:gravity="center"
                android:text="4.5 (25+)"
                android:singleLine="true"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/txv_dish_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imv_thumbnail"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Pizza"
                android:textSize="32dp" />

            <ImageView
                android:id="@+id/imv_star"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_above="@+id/txv_dish_name"
                android:layout_alignParentLeft="true"
                android:src="@drawable/icons8_star_96px" />

            <TextView
                android:id="@+id/txv_dish_ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txv_dish_name"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Chicken, Cheese"
                android:textSize="20dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>